DEFINE BAR 2 OF compras PROMPT "Pagos" ;
	SKIP FOR .NOT. oapp.permisos(504)
ON SELECTION BAR 1 OF compras OAPP.DOFORM('CP_COMPRA')
ON SELECTION BAR 2 OF compras OAPP.DOFORM('CP_PAGOS')

